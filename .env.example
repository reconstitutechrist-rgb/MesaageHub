# MessageHub Environment Variables
# Copy this file to .env and fill in your values

# Supabase Configuration
# Get these from your Supabase project dashboard at https://supabase.com/dashboard
# Project Settings > API > Project URL and anon/public key
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_FILE_UPLOADS=true
VITE_ENABLE_VOICE_CALLS=false
VITE_ENABLE_VIDEO_CALLS=false

# Limits
VITE_MAX_FILE_SIZE=5242880
VITE_MAX_MESSAGE_LENGTH=2000

# Analytics (optional)
VITE_ANALYTICS_ID=

# Debug
VITE_DEBUG=false
