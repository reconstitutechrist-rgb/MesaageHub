# MessageHub Environment Variables
# Copy this file to .env and fill in your values

# API Configuration (when replacing Base44)
VITE_API_URL=http://localhost:3000/api
VITE_API_KEY=your-api-key-here

# Authentication
VITE_AUTH_SECRET=your-auth-secret-here

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_FILE_UPLOADS=true
VITE_ENABLE_VOICE_CALLS=false
VITE_ENABLE_VIDEO_CALLS=false

# Limits
VITE_MAX_FILE_SIZE=5242880
VITE_MAX_MESSAGE_LENGTH=2000

# WebSocket (for real-time messaging)
VITE_WS_URL=ws://localhost:3000/ws

# Analytics (optional)
VITE_ANALYTICS_ID=

# Debug
VITE_DEBUG=false
